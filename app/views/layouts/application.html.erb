<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header-bar">
        <h1 class="hedding"><a href="/">Blog</a></h1>
        <div class="hedding-post">
          <a class="post" href="/tweets/new">new</a>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
